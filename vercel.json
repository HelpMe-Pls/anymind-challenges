{
  "version": 1,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/bun",
      "config": {
        "outputDirectory": "dist",
        "runtime": "edge"
      }
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
